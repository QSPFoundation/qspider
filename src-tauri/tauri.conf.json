{
  "package": {
    "productName": "qSpider",
    "version": "0.12.0"
  },
  "build": {
    "distDir": "../dist/apps/player-desktop",
    "devPath": "http://localhost:4200",
    "beforeDevCommand": "npm run serve:desktop",
    "beforeBuildCommand": "npm run build:desktop",
    "withGlobalTauri": false
  },
  "tauri": {
    "cli": {
      "description": "qSpider API example",
      "args": [
        {
          "short": "f",
          "name": "file",
          "takesValue": true,
          "description": "Game file to open"
        }
      ]
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "org.qsp.qspider",
      "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
      "resources": [],
      "externalBin": [],
      "copyright": "",
      "category": "DeveloperTool",
      "shortDescription": "",
      "longDescription": "",
      "deb": {
        "depends": [],
        "useBootstrapper": false
      },
      "macOS": {
        "frameworks": [],
        "minimumSystemVersion": "",
        "useBootstrapper": false,
        "exceptionDomain": "",
        "signingIdentity": null,
        "entitlements": null
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "updater": {
      "active": true,
      "endpoints": ["https://qspfoundation.github.io/qspider/updater.json"],
      "dialog": true
    },
    "allowlist": {
      "all": true
    },
    "windows": [
      {
        "title": "qSpider",
        "width": 1024,
        "height": 768,
        "center": true,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src blob: data: filesystem: ws: wss: http: https: tauri: 'unsafe-eval' 'unsafe-inline' 'self' img-src: 'self'"
    }
  }
}
